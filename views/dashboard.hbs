{{> menu id="dashboard"}}



<section class="ui raised segment">

  <table class="ui very basic center aligned table">
    <tr>
      <th class = "two wide column"><i class="huge user icon"></i></th>
      <th class = "two wide column"><i class="huge user icon"></i></th>
      <th class = "two wide column"><i class="huge heartbeat icon"></i></th>
      <th class = "two wide column"><i class="huge user md icon"></i></th>
    </tr>
      

    <tr>
      <th class = "two wide column"><header class="ui header">{{username}}</header></th>
      <th class = "two wide column"><header class="ui header">IDEAL WEIGHT INDICATOR</header></th>
      <th class = "two wide column"><header class="ui header">BMI : "BMI" </header></th>
      <th class = "two wide column"><header class="ui header">"BMI CAT"</header></th>
    </tr>
   

  </table>

  </section>
  
 
  
  <form class="ui stacked segment form" action="/dashboard/addassessment" method="POST">
  <table class="ui left aligned very basic table">
  <tr>
    <td class="field">
      <label>Weight</label>
      <input placeholder="00.00kg" type="double" name="weight">
    </td>
    <td class="field">
      <label>Chest</label>
      <input placeholder="00.00cm" type="double" name="chest">
    </td>
    <td class="field">
      <label>Thigh</label>
      <input placeholder="00.00cm" type="double" name="thigh">
    </td>
  </tr>
    <tr>
      <td class="field">
      <label>UpperArm</label>
      <input placeholder="00.00cm" type="double" name="upperArm">
      </td>
      <td class="field">
      <label>Waist</label>
      <input placeholder="00.00cm" type="double" name="waist">
      </td>
      <td class="field">
      <label>Hips</label>
      <input placeholder="00.00cm" type="double" name="hips">
      </td>
    </tr>
  </table>
  <button class="ui blue submit button">Add Assessment</button>
</form>
  

  <section class="ui segment">
    <h2 class="ui header">
      {{member}}
    </h2>
    <table class="ui table">
      <thead>
        <tr>
          <th>Weight</th>
          <th>Chest</th>
          <th>Thigh</th>
          <th>Upper Arm</th>
          <th>Waist</th>
          <th>Hips</th>
        </tr>
      </thead>
      
      <tbody>
        {{#each assessments}}
          <tr>
            <td>
              {{weight}}
            </td>
            <td>
              {{chest}}
            </td>
            <td>
              {{thigh}}
            </td>
            <td>
              {{upperArm}}
            </td>
            <td>
              {{waist}}
            </td>
            <td>
              {{hips}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </section>


